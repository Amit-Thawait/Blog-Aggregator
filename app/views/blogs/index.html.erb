<h1>Listing blogs</h1>

<table>
  <tr>
    <th>Blogger name</th>
    <th>Blog url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.blogger_name %></td>
    <td><%= blog.blog_url %></td>
    <td><%= link_to 'Show', blog_path(blog)%></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

